    <camelContext id="wmq-to-amq-bridge" xmlns="http://camel.apache.org/schema/spring">
        <route id="security-request-websphereMQ-to-amazonMQ">
            <description>Camel Route from websphereMQ to amazonMQ</description>
            <from uri="websphereMQ:queue:CERN.SSREQ.SECURITY?concurrentConsumers=1&amp;disableReplyTo=true"/>
            <inOnly uri="amazonMQ:queue:CERN.SSREQ.SECURITY?preserveMessageQos=true"/>
        </route>
        <route id="security-request-amazonMQ-to-websphereMQ">
            <description>Camel Route from amazonMQ to websphereMQ</description>
            <from uri="amazonMQ:queue:CERN.SSREQ.SECURITY?concurrentConsumers=1&amp;disableReplyTo=true"/>
            <to pattern="InOnly" uri="websphereMQ:queue:CERN.SSREQ.SECURITY?preserveMessageQos=true"/>
        </route>
